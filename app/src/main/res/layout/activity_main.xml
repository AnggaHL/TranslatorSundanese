<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:padding="16dp"
    android:id="@+id/root"
    android:fitsSystemWindows="true">


    <!-- Buat drawable gradient untuk premium look: biru gelap ke putih -->

    <!-- Header Premium: Selamat Datang + Jam -->
    <LinearLayout
        android:id="@+id/headerPremium"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/header_background"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Drawable dengan warna biru gelap, rounded top -->

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Selamat Datang di Aplikasi Translator Sundanese!"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/tvClock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="14:30:00"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/white" />
        <!-- Update di code untuk real-time -->
    </LinearLayout>

    <!-- Bar atas: arah + swap (dengan margin dari header) -->
    <Spinner
        android:id="@+id/spDirection"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.Spinner"
        app:layout_constraintTop_toBottomOf="@id/headerPremium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnSwap"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="@color/purple_500" />
    <!-- Material style untuk premium; Warna premium definisikan di colors.xml -->

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSwap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="0dp"
        app:cornerRadius="50dp"
        app:icon="@drawable/ic_swap"
        app:layout_constraintTop_toTopOf="@id/spDirection"
        app:layout_constraintBottom_toBottomOf="@id/spDirection"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/purple_700" />
    <!-- Tambahkan icon jika ada -->

    <!-- Aksi input: paste & clear (Material Buttons) -->
    <LinearLayout
        android:id="@+id/rowInputActions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/spDirection"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPaste"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Paste"
            app:cornerRadius="8dp"
            android:layout_marginEnd="4dp"
            app:layout_constraintHorizontal_chainStyle="spread" />

        <Space
            android:layout_width="8dp"
            android:layout_height="wrap_content" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnClear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Clear"
            app:cornerRadius="8dp"
            android:layout_marginStart="4dp" />
    </LinearLayout>

    <!-- CardView untuk Input + Counter -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/rowInputActions"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp">

        <!-- Shadow premium -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <EditText
                android:id="@+id/etInput"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:hint="Tulis teks yang ingin diterjemahkanâ€¦"
                android:gravity="top|start"
                android:inputType="textMultiLine"
                android:background="@null"
                android:padding="8dp"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_marginTop="8dp" />
            <!-- Divider -->

            <TextView
                android:id="@+id/tvCounter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 / 5000 chars"
                android:textSize="12sp"
                android:textColor="@color/gray_600"
                android:layout_gravity="end"
                android:layout_marginTop="4dp" />
            <!-- Limit contoh untuk premium feel -->
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Tombol translate + loading (Material style) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnTranslate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Terjemahkan Sekarang"
        app:cornerRadius="8dp"
        app:icon="@drawable/ic_translate"
        app:layout_constraintTop_toBottomOf="@id/cardInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnRetry"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="@color/purple_500" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnRetry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ulang"
        app:cornerRadius="8dp"
        app:icon="@drawable/ic_retry"
        app:layout_constraintTop_toTopOf="@id/btnTranslate"
        app:layout_constraintBottom_toBottomOf="@id/btnTranslate"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/orange_500" />

    <ProgressBar
        android:id="@+id/progress"
        style="?attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/btnTranslate"
        app:layout_constraintBottom_toBottomOf="@id/btnTranslate"
        app:layout_constraintEnd_toStartOf="@id/btnRetry"
        android:layout_marginEnd="8dp" />

    <!-- CardView untuk Hasil -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardResult"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="#F8F9FA"
        app:layout_constraintTop_toBottomOf="@id/btnTranslate"
        app:layout_constraintBottom_toTopOf="@id/rowResultActions"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp">

        <!-- Abu-abu muda premium -->

        <TextView
            android:id="@+id/tvResult"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            android:text="Hasil terjemahan akan muncul di sini..."
            android:textIsSelectable="true"
            android:textSize="16sp"
            android:lineSpacingExtra="4dp" />
    </androidx.cardview.widget.CardView>

    <!-- Aksi hasil: copy & share -->
    <LinearLayout
        android:id="@+id/rowResultActions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCopy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Copy"
            app:cornerRadius="8dp"
            app:icon="@drawable/ic_copy"
            android:layout_marginEnd="4dp" />

        <Space
            android:layout_width="8dp"
            android:layout_height="wrap_content" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnShare"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Share"
            app:cornerRadius="8dp"
            app:icon="@drawable/ic_share"
            android:layout_marginStart="4dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
